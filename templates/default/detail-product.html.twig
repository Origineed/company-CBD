{% extends 'base.html.twig' %}

{% block title %}ORIGINEED Detail produit {% endblock %}

{% block stylesheets %}

<link rel="stylesheet" href="{{ asset('css/detailProduct.css') }}">

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
            crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>

{% endblock %}

{% block body %}

<body class="back">
    <img src="../pictures/blur-login2.svg" class="detail-blur-login2">
    <div class="container">
        <div class="datail-content-card">
            <div class='product-detail-card'>
                <div class='image-f'>
                </div>
                <div class='wave'></div>
                <div class='wave'></div>
                <div class='wave'></div>
                <div>
                    <div class="row">
                        <div class="col-1">
                            <div class="detail-content-star">
                            {% for i in 1.. productDetail.star  %}
                                <img  class="detail-icons-star" src="../pictures/icone-etoile-grise.png"> 
                                {% endfor %}
                            </div>
                        </div>
                        <div class="col-5">
                            <img src="{{ productDetail.picture }}" class="detail-image-art1">
                        </div>
                        <div class="col-6">
                            <h1 class="detail-title-article ps-3">{{ productDetail.title }}</h1>
                            <h6 class="little-detail-title">{{ productDetail.title }}</h6>
                            <p class="detail-description-article">{{ productDetail.description }}</p>
                            <div class="row">
                            <div class="col-2 mt-3">
                            {{ form_start(quantityProduct)}}

                            {{ form_row(quantityProduct.quantity)}}

                            {{ form_end(quantityProduct)}}
                            </div>
                            <div class="col-1 mt-3">
                            <h3 class="detail-price-article">â‚¬{{ productDetail.price }} </h3>
                            </div>
                            </div>

                           <a href="{{ path('cart_add', {'id': productDetail.id}) }}"><button class="detail-button-article">SHOP NOW</button><a/>
                            <img  class="detail-triangle-icon" src="../pictures/triangle.svg">
                        </div>    
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
{% endblock %}