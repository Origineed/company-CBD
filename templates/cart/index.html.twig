{% extends 'base.html.twig' %}

{% block title %}Panier ORIGINEED{% endblock %}

{% block stylesheets %}
 <link rel="stylesheet" href="{{ asset('css/cart.css') }}">
 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
            crossorigin="anonymous">
{% endblock %}



{% block body %}
<body class="back">
    <img src="../pictures/blur-login2.svg" class="cart-blur-login2">
    <div class="nav-center">
        <img src="../pictures/nav.svg" class="nav-cart">
    </div>
    {% if cart|length > 0 %}
    <div class="container-fluid">
        <div class="container mb-5">
            <h2 class="title-cart"> PANIER</h2>
            <hr class="lign-color">
            {% for productOrder in cart %}
                <div class=" dimention-content-cart">
                    <div class="row  ">
                        <div class="col-3">
                            <img src="{{ productOrder.product.picture }}" class="place-picture">
                        </div>
                        <div class="col-8 mt-4">
                            <div class="row">
                                <div class="col-1">
                                    <img src="{{ productOrder.product.picture }}" class="place-picture-miniature">
                                </div>
                                <div class="col-3 ">
                                    <h3 class="cart-product-cut">{{ productOrder.product.title }}</h3>
                                    <p class="cart-white">{{ productOrder.product.quantity}} gr(s)</p>
                                    <p class="label"> {{ productOrder.product.category.label }}</p> 
                                </div>
                                <div class="col-3">
                                    <p class="color-font font-family-price">
                                    €{{ productOrder.product.price }}
                                    </p>
                                </div>
                                <div class="col-3 ">
                                    <p class="color-font less-quantity">
                                    <a href="{{  path('cart_addremoveone', {'id': productOrder.product.id, 'operator': 'less'}) }}" class="no-decoration">-</a>
                                    {{ productOrder.quantityInCart }}
                                    <a href="{{  path('cart_addremoveone', {'id': productOrder.product.id, 'operator': 'more'}) }}" class="no-decoration">+</a>
                                    </p>
                                </div>
                                <div class="col-2">
                                    <a href="{{  path('cart_remove_product', {'id': productOrder.product.id}) }}" class="no-decoration"><img src="../pictures/icons8-poubelle-30.png" class="size-icone-basket"></a>
                                </div>
                            </div>
                            <div class="recap-shop">
                                <div class="row">
                                    <div class="col-8">
                                        <p class="price-multipl-total text-left">TOTAL</p>
                                    </div>
                                    <div class="col-3 text-rigth">
                                        <p class="price-multipl-total">€{{ productOrder.product.price * productOrder.quantityInCart }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>    
                {% endfor %}
                {% else %}
                <h2 class="text-danger"> Votre panier est vide</h2>
                {% endif %}
            </div>
        </div>
    </div>
<body>
{%  endblock %}
